---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: cilium
  namespace: kube-system
spec:
  chart: cilium
  repo: https://helm.cilium.io/
  version: {{ cilium_kube_router.cilium.version }}
  targetNamespace: kube-system
  bootstrap: true
  valuesContent: |-
    k8sServiceHost: {{ k3s_control_node_address }}
    k8sServicePort: 6443
    image:
      repository: {{ cilium_kube_router.cilium.registry }}/cilium
      tag: v{{ cilium_kube_router.cilium.version }}
      pullPolicy: IfNotPresent
    {% if cilium_kube_router.cilium.etcd is defined and cilium_kube_router.cilium.etcd %}
    etcd:
      enabled: true
      ssl: true
      endpoints:
      {% for host in groups['master'] %}
      - "https://{{ hostvars[host].ansible_default_ipv4.address }}:2379"
      {% endfor %}
    {% endif %}
    operator:
      enabled: true
      image:
        repository: {{ cilium_kube_router.cilium.registry }}/operator
        tag: v{{ cilium_kube_router.cilium.version }}
        pullPolicy: IfNotPresent
      prometheus:
        enabled: true
        port: 6942
        serviceMonitor:
          enabled: true
    tunnel: disabled
    autoDirectNodeRoutes: true
    kubeProxyReplacement: strict
    nativeRoutingCIDR: "{{ cilium_kube_router.cilium.nativeRoutingCIDR }}"
    endpointRoutes:
      enabled: true
    hostServices:
      enabled: true
    nodePort:
      enabled: true
      mode: dsr
    externalIPs:
      enabled: true
    ipam:
      operator:
        clusterPoolIPv4PodCIDR: "{{ k3s_cluster_cidr }}"
        clusterPoolIPv4MaskSize: 24
    containerRuntime:
      integration: containerd
      socketPath: /var/run/k3s/containerd/containerd.sock
    prometheus:
      enabled: true
      serviceMonitor:
        enabled: true
    hubble:
      enabled: true
      ui:
        enabled: true
      relay:
        enabled: true
      metrics:
        enabled:
        - dns
        - drop
        - tcp
        - flow
        - port-distribution
        - icmp
        - http
        serviceMonitor:
          enabled: true